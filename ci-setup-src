#!/bin/sh

set -e

if [ -f ./autogen.sh ]; then
 ./autogen.sh
fi

if [ -f ./configure ]; then
 # workaround bug in pacemaker test suite
 if [ "$DEST" = "pcmk" ]; then
  echo "./configure $DISTROCONFOPTS"
  ./configure $DISTROCONFOPTS
 else
  echo "./configure --prefix=/srv/$DEST/${ghprbActualCommit}/ --exec-prefix=/srv/$DEST/${ghprbActualCommit} $DISTROCONFOPTS"
  ./configure --prefix=/srv/$DEST/${ghprbActualCommit}/ --exec-prefix=/srv/$DEST/${ghprbActualCommit} $DISTROCONFOPTS
 fi
fi

